FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 2 -2 0 0 0 0 ];

internalField   uniform 0.000046;

boundaryField
{
    inlet
    {
        type            turbulentIntensityKineticEnergyInlet;
        intensity       0.062833;
        value           $internalField;
    }

    outlet
    {
        type            zeroGradient;
    }

    outer-wall
    {
        type            kqRWallFunction;
        value           uniform 0;
    }

    axis
    {
        type empty;
    }

    front
    {
        type wedge;
    }

    back
    {
        type wedge;
    }
}


